{
  "name": "tilly",
  "description": "Tilly - AI-powered calendar application with natural language event creation",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/client"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npx convex dev\" \"npm run dev -w @tilly/client\"",
    "dev:client": "npm run dev -w @tilly/client",
    "dev:convex": "npx convex dev",
    "build": "npm run build -w @tilly/shared && npm run build -w @tilly/client",
    "deploy": "npx convex deploy",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/.tsbuildinfo",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "concurrently": "^9.1.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@oslojs/crypto": "^1.0.1",
    "convex": "^1.31.2",
    "resend": "^6.7.0"
  }
}
