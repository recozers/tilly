{
  "name": "tilly",
  "description": "Tilly - AI-powered calendar application with natural language event creation",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/client"
  ],
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run build -w @tilly/shared && npm run build -w @tilly/server && npm run build -w @tilly/client",
    "dev": "concurrently \"npm run dev -w @tilly/server\" \"npm run dev -w @tilly/client\"",
    "dev:server": "npm run dev -w @tilly/server",
    "dev:client": "npm run dev -w @tilly/client",
    "start": "npm run start -w @tilly/server",
    "test": "npm run test -w @tilly/server",
    "test:coverage": "npm run test:coverage -w @tilly/server",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/.tsbuildinfo"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.2"
  }
}
