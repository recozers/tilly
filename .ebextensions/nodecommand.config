option_settings:
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: "18.20.4"
  aws:elasticbeanstalk:application:environment:
    NPM_USE_PRODUCTION: false
    NODE_ENV: production
    NODE_ICU_DATA: "/var/app/current/node_modules/full-icu"

