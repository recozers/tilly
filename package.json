{
  "name": "modern-calendar",
  "description": "Tilly - AI-powered calendar application with natural language event creation",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "format": "prettier --write src",
    "lint": "eslint --ext .jsx,.js src",
    "dev": "vite",
    "build": "vite build",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:real": "jest --config jest.real.config.js",
    "test:mock": "jest --config package.json",
    "populate-profiles": "node populate-user-profiles.js"
  },
  "dependencies": {
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "full-icu": "^1.3.2",
    "ical": "^0.8.0",
    "ical.js": "^2.2.1",
    "multer": "^2.0.1",
    "nodemailer": "^6.9.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rrule": "^2.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.1.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.3.2",
    "rc": "^1.2.8",
    "supertest": "^7.1.1",
    "uuid": "^11.1.0",
    "vite": "^5.4.1",
    "vite-plugin-checker": "^0.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "supabase.js",
      "src/**/*.js",
      "!src/index.jsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
